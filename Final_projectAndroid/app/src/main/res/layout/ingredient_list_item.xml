<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#FFD700">

    <!-- ImageView để hiển thị ảnh -->
    <ImageView
        android:id="@+id/iv_anh_nguyenlieu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/list_menu"
        android:scaleType="centerCrop"
        android:contentDescription="Ingredient Image"
        android:layout_marginEnd="12dp" />

    <!-- TextView để hiển thị tên nguyên liệu -->
    <TextView
        android:id="@+id/tv_IngredientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toEndOf="@id/iv_anh_nguyenlieu"
        android:layout_centerVertical="true"
        android:text="Tên nguyên liệu"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:padding="5dp" />

</RelativeLayout>
