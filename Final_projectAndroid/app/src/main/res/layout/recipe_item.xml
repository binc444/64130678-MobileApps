<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CardView for Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_recipe_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!-- CardView for Recipe Details -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_recipe_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên món ăn"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:padding="8dp"
                    android:textColor="#FF6347" />

                <TextView
                    android:id="@+id/tv_recipe_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Danh mục: Món chính"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_recipe_difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Độ khó: Trung bình"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_recipe_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thời gian: 45 phút"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_recipe_servings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khẩu phần: 4 người"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_recipe_health"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin sức khỏe: Giàu protein, ít chất béo"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textColor="#333333" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for Instructions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:id="@+id/tv_recipe_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hướng dẫn nấu ăn: \n1. Chuẩn bị nguyên liệu.\n2. Nấu theo các bước.\n3. Trang trí và thưởng thức."
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"
                android:padding="20dp"
                android:textColor="#333333" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
